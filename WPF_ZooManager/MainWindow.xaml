<Window x:Class="WPF_ZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="725">
    <Grid>
        <Label Content="Zoo List" HorizontalAlignment="Left" Margin="10, 0, 0, 0" VerticalAlignment="Top" />
        <ListBox Name="ListZoos" HorizontalAlignment="Left" Height="175" Margin="10, 40, 0, 0" VerticalAlignment="Top" Width="160" SelectionChanged="ListZoos_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Hidden" />
        
        <Label Content="Associated animals list" HorizontalAlignment="Left" Margin="202,0,0,0" VerticalAlignment="Top" />
        <ListBox x:Name="ListAssociatedAnimals" HorizontalAlignment="Left" Height="175" Margin="202,40,0,0" VerticalAlignment="Top" Width="160" ScrollViewer.HorizontalScrollBarVisibility="Hidden"/>
        
    </Grid>
</Window>
